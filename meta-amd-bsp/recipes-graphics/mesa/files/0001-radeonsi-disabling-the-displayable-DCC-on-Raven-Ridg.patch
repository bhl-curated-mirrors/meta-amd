--- a/src/amd/common/ac_gpu_info.c
+++ b/src/amd/common/ac_gpu_info.c
@@ -475,8 +475,7 @@ bool ac_query_gpu_info(int fd, void *dev_p,
 	info->ib_start_alignment = ib_align;
 
 	if (info->drm_minor >= 31 &&

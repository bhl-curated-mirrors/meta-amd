 			amdgpu_ttm_placement_from_domain(bo, mem->domain);
-			ret = ttm_bo_validate(&bo->tbo, &bo->placement,
-					      false, false);
+			ret = ttm_bo_validate(&bo->tbo, &bo->placement, &ctx);
